<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d_10"
        app:cardCornerRadius="@dimen/d_8"
        app:cardBackgroundColor="#2F3B52"
        android:elevation="@dimen/d_20"
        android:layout_marginHorizontal="@dimen/d_15"
        android:layout_height="@dimen/d_100">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_100"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/d_3">

            <TextView
                android:id="@+id/tv_m003_item_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_20"
                android:layout_weight="1"
                android:gravity="start"
                android:text="CITY"
                android:textAllCaps="true"
                android:textColor="@color/colorBlue_1"
                android:textSize="@dimen/d_18" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d_20"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical">

                <TextClock
                    android:id="@+id/tv_m003_item_time_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 : 40"
                    android:textColor="@color/colorBlue_1"
                    android:textSize="@dimen/d_30" />

                <View
                    android:layout_width="@dimen/d_50"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/d_5"
                    android:background="@color/colorGraySuperLight" />

                <TextView
                    android:id="@+id/tv_m003_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_5"
                    android:text="Date"
                    android:textColor="@color/colorBlue_1"
                    android:textSize="@dimen/d_16" />
            </LinearLayout>
        </TableRow>
    </androidx.cardview.widget.CardView>


</LinearLayout>