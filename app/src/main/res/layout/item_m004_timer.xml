<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/d_10"
    android:paddingBottom="@dimen/d_10">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/d_100"
        android:layout_height="@dimen/d_100"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_5"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:layout_width="0dp"
                android:id="@+id/ed_m004_item_label"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Label"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/d_18" />

            <ImageView
                android:id="@+id/iv_m004_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_cancel"
                android:tint="@color/colorAccent" />
        </TableRow>

        <TextView
            android:id="@+id/tv_m004_item_count_downn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 : 00 : 00"
            android:textColor="#007DD6"
            android:textSize="@dimen/d_25" />


    </LinearLayout>
</LinearLayout>